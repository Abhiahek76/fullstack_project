<% layout('layouts/boilerplate') -%>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for(let alldata of searchResults) { %>
  <a href=" /listing/<%= alldata._id %>" class="card-link">
    <div class="card col">
      <img
        src="<%= alldata.image.url %>"
        class="card-img-top"
        alt="listing"
        style="height: 20rem"
      />
      <div class="card-img-overlay">
        <i class="fa-sharp fa-solid fa-heart overly-love"></i>
      </div>
      <div class="card-body">
        <p class="cart-text">
          <b><%= alldata.title %></b><br />
          &#8377;<%= alldata.price%>/night
          <i class="text-info">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
